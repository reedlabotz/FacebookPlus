{
   "name" : "FacebookCircle",
   "version" : "0.0.1",
   "description" : "Add a facebook circle to google+",
   "browser_action" : {
      "default_icon" : "logo.png"
   },
   "icons" :{
      "16" : "logo.png",
      "48" : "logo.png"
   },
   "permissions" :[
      "https://www.facebook.com/"
   ],
   "background_page" : "background.html",
   "content_scripts": [
       {
         "matches": ["https://plus.google.com/","https://plus.google.com/stream/*"],
         "js": ["js/jquery.min.js","js/facebook.js"],
         "run_at": "document_end",
         "all_frames": true
       }
    ]
}